<!DOCTYPE html>
<html>
  <head>
    <title>DocAppointmentbook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"> 
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
    <div class="nav-wrapper">
      <a href="#" class="brand-logo">Health-Tracker</a>
      <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <% if !current_user %>
        <li><%= link_to "Sign In", new_user_session_path %></li>
        <li><%= link_to "Sign Up", new_user_registration_path %></li>
        <% else %>
        <li><%= link_to "My Account", user_session_path %></li>
        <li><%= link_to "Patients", patients_path %></li>
        <li><%= link_to "Doctors", doctors_path %></li>
        <li><%= link_to "Appointments", appointments_path %></li>
        <li><a href="#terms" class="modal-trigger">&#128214;</a></li>
        <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
        <% end %>
      </ul>
      <ul class="sidenav" id="mobile-demo">
        <% if !current_user %>
        <li><%= link_to "Sign In", new_user_session_path %></li>
        <li><%= link_to "Sign Up", new_user_registration_path %></li>
        <% else %>
        <li><%= link_to "My Account", user_session_path %></li>
       
        <li><%= link_to "Patients", patients_path %></li>
        <li><%= link_to "Doctors", doctors_path %></li>
        <li><%= link_to "Appointments", appointments_path %></li>
        <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
        <% end %>
       </ul>
    </div>
  </nav>
  <div class="container">
    <%= yield %>
    <div class="modal" id="terms">
      <div class="container" style="padding: 20px;">
        <label for="search"></label>
        <input type='text' id="search-text" name= "search">
        <input type="button" id="search" value="search">
      </div>
    </div>
  </div>
  </body>
</html>
