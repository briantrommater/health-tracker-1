<%= form_with(model: appointment, local: true) do |form| %>
  <% if appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
      <% appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :patient_id %>
    <%= form.number_field :patient_id %>
    <%= form.collection_select(:patient_id, Patient.all, :id, :last_name, {}) %>
  </div>

  <div class="field">
    <%= form.label :doctor_id %>
    <%= form.number_field :doctor_id %>
    <%= form.collection_select(:doctor_id, Doctor.all, :id, :last_name, {}) %>
  </div>

  <div class="field">
    <%= form.label :appt %>
    <%= form.text_field :appt, {placeholder: 'Select Date', :class => "datepicker"} %>
    <%= form.text_field :appt, {placeholder: 'Select Time', :class => "timepicker"}%>
  </div>

  <div class="field">
    <%= form.label :details %>
    <%= form.text_area :details %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
